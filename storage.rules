rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'images' directory
    match /images/{imageId} {
      // Allow read access to anyone, including unauthenticated users.
      // This is necessary so that images can be displayed in the app.
      allow read;

      // Allow write access (create, update, delete) only if the user is authenticated.
      // This ensures that only logged-in members can upload photos.
      allow write: if request.auth != null &&
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*'); // Only allow images
    }
  }
}
